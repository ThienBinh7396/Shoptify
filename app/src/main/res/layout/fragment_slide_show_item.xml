<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="140dp">

  <ImageView
    android:id="@+id/ivBackground"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:scaleType="centerCrop"
    android:adjustViewBounds="true"
    android:tint="#6F000000"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:id="@+id/tvFirstText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="36dp"
      android:layout_marginTop="@dimen/dimen__18"
      android:textColor="#fafafa"
      android:visibility="gone"
      android:textSize="14sp"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/tvSecondText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tvFirstText"
      android:layout_marginTop="-2dp"
      android:layout_marginStart="46dp"
      android:textColor="@color/colorWhite"
      android:textSize="26sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/tvDescriptionText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tvSecondText"
      android:layout_marginStart="68dp"
      android:layout_marginTop="@dimen/dimen__6"
      android:textColor="@color/colorBackground"
      android:textSize="12sp" />
  </RelativeLayout>
</FrameLayout>
